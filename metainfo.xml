<?xml version="1.0" encoding="utf-8"?>
<Extension>

	<name>localizer</name>
	<version>0.2</version>
	<title>区域化</title>
	
	<description>
用于支持蜂巢提供多语言、地区的服务。
提供了一个语言/地区的切换菜单，以及语言包的翻译工具。
	</description>

	<class>org.opencomb.localizer.Localizer</class>
	<package folder="/class" namespace="org.opencomb.localizer" />

	<template folder="/template" />
	
	<publicFolder folder="/public" />
	
	<require type="extension" item="coresystem"><![CDATA[ >=0.2 ]]></require>
	
</Extension>
